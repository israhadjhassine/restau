    </nav>

    <div class="welcome-banner">
        <h1>Bonjour, <%= user.username %> !</h1>
        <p>Que souhaitez-vous commander aujourd'hui ?</p>
    </div>

    <div class="dashboard">
        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/client/restaurants" class="action-btn">
                <h3>ðŸ“‹ Voir les restaurants</h3>
                <p>DÃ©couvrez nos restaurants partenaires</p>
            </a>
            <a href="/client/cart" class="action-btn">
                <h3>ðŸ›’ Voir mon panier</h3>
                <p>Consulter mes articles</p>
            </a>
